{
  "compilerOptions": {
    "types": ["vite/client"],
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxFactory": "h",
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "paths": {
      "@/ex/*": ["./demo/*"],
      "@/comps/*": ["./src/*"]
    }
  }
}
