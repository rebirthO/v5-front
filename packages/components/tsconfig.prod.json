{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./lib",
    "declarationDir": "./lib",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "esnext",
    "target": "es6"
  },
  "exclude": ["node_modules"],
  "include": ["./src/*"]
}
