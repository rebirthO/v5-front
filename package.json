{
  "name": "front-next",
  "version": "0.0.1",
  "description": "Comunion frontend packages",
  "keywords": [
    "comunion"
  ],
  "repository": "comunion-io/front-next",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "postinstall": "husky install",
    "setup": "yarn && lerna bootstrap",
    "stylint": "stylelint \"src/**/*.{css,less,scss,sass,styl}\" --fix",
    "gen:component": "lerna run gen:component --scope @comunion/generator",
    "dev": "concurrently \"yarn --cwd packages/utils build:w\" \"yarn --cwd packages/icons build:w\" \"yarn --cwd packages/hooks build:w\" \"yarn --cwd packages/esbuild-plugin-svg-to-vue3 build:w\" \"yarn --cwd packages/web dev\"",
    "build": "tsc -b",
    "web": "lerna run dev --scope @comunion/web"
  },
  "dependencies": {
    "fast-glob": "^3.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/chokidar": "^2.1.3",
    "@types/ncp": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "chokidar": "^3.5.2",
    "concurrently": "^6.2.0",
    "devmoji": "^2.2.0",
    "esbuild": "^0.12.14",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "ncp": "^2.0.0",
    "prettier": "^2.3.0",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  }
}
