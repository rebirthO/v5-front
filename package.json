{
  "name": "front-next",
  "version": "0.0.1",
  "description": "Comunion frontend packages",
  "keywords": [
    "comunion"
  ],
  "repository": "comunion-io/front-next",
  "license": "GPL-3.0-or-later",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "docs": "yarn --cwd packages/docs run docs:dev",
    "dev:utils": "yarn --cwd packages/utils dev",
    "dev:hooks": "yarn --cwd packages/hooks dev",
    "dev:components": "yarn --cwd packages/components dev",
    "dev:web": "yarn --cwd packages/web dev",
    "dev": "run-s build:icon build:utils build:hooks build:components && npm run dev:web",
    "build:icon": "yarn --cwd packages/icons build",
    "build:utils": "yarn --cwd packages/utils build",
    "build:hooks": "yarn --cwd packages/hooks build",
    "build:components": "yarn --cwd packages/components build",
    "build:web": "yarn --cwd packages/web build",
    "build": "run-s build:utils build:icon build:hooks build:components build:web",
    "clear:dist": "rm -rf packages/*/dist",
    "stylint": "stylelint \"packages/*/src/**/*.{css,less,scss,sass,styl}\" --fix",
    "jslint": "eslint \"packages/*/src/**/*.{ts,tsx}\"",
    "lint": "npm run stylint && npm run jslint",
    "gen:component": "ts-node scripts/generate.ts component",
    "gen:goerli": "ts-node scripts/generate.ts contract goerli",
    "gen:main": "ts-node scripts/generate.ts contract main",
    "gen:api": "yarn --cwd packages/web run gen:api"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.10",
    "tslib": "^2.3.1",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "devmoji": "^2.2.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^4.3.1",
    "fs-extra": "^10.0.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "ora": "^6.0.1",
    "prettier": "^2.3.0",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^21.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  }
}
